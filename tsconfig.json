{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "outDir": "./lib",
    "baseUrl": "src",
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": false,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "removeComments": true,
    "target": "es6",
    "typeRoots": [
      "node_modules/@types"
    ],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "server/**/*.ts",
  ]
}